    </div>
    <div id="fdata">
        <input type="hidden" name="chitietnhap_ctdt" value="" />
    </div>
    <div id="toolbar" class="btn-group" style="">
        <button data-toggle="tooltip" title="Quay lại danh sách đơn" class="btn btn-default"
            onclick="window.location='http://www.cit.ctu.edu.vn/vpk/don'"><span class="glyphicon glyphicon-arrow-left"
                style="font-size: 16px"></span></button>
        <button class="btn btn-default" data-toggle="tooltip" title="Nộp đơn này"
            onclick="$('#nopWin').modal('show')"><span class="glyphicon glyphicon-open"
                style="font-size: 16px"></span></button> <button class="btn btn-default" data-toggle="tooltip"
            title="Lưu đơn này" onclick="$('#luuWin').modal('show')"><span class="glyphicon glyphicon-floppy-disk"
                style="font-size: 16px"></span></button>
        <span class="badge badge-error"
            style="position: absolute;z-index: 3;margin-left: 23px;margin-top: -2px;-webkit-box-shadow: 0px 0px 5px rgba(50, 50, 50, 1);-moz-box-shadow: 0px 0px 5px rgba(50, 50, 50, 1);box-shadow: 0px 0px 5px rgba(50, 50, 50, 1);"></span>
        <button id="btnPhanhoi" type="button" class="btn btn-default" title="Thông tin phản hồi của văn phòng khoa"
            data-toggle="tooltip" data-content='
    Chưa có phản hồi nào'><span class="glyphicon glyphicon-envelope" style="font-size: 16px"></span></button>
        <button id="btnHuongdan" type="button" class="btn btn-default" title="Hướng dẫn" data-toggle="tooltip"
            data-content='<p> Đơn này không có bất kỳ hướng dẫn nào </p>'><span class="glyphicon glyphicon-info-sign"
                style="font-size: 16px"></span></button>
    </div>
    <div class="modal" id="nopWin" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" style="width: 400px;">
            <div class="modal-content modal-info">
                <div class="modal-body">
                    <h3>Bạn có thật sự muốn nộp đơn này?</h3><br>
                    <button class="btn btn-primary" id="nopOK">OK</button>
                    <button class="btn btn-default" data-dismiss="modal">Không</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        $("#nopOK").click(function () {
            var content = '&nbsp;';
            $.each($('.editable'), function (i, l) {
                content += $(this).html() + '||';
            });
            var fdata = { chitietnhap_ctdt: content, trangthaiht_ctdt: 0, don_id: 2 };
            $("#donWin").css('z-index', 1030);
            $("#loader").fadeIn();
            $.ajax({
                url: '../nopdon', type: 'post', data: fdata,
                success: function (data, textStatus, jqXHR) {
                    window.location = 'http://www.cit.ctu.edu.vn/vpk/don';
                }, error: function (jqXHR, textStatus, errorThrown) {
                    $("#log").html(jqXHR.responseText);
                }
            });
        });</script>
    <div class="modal" id="luuWin" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" style="width: 400px;">
            <div class="modal-content modal-info">
                <div class="modal-body">
                    <h3>Bạn có thật sự muốn lưu lại đơn này?</h3><br>
                    <button class="btn btn-primary" id="luuOK">OK</button>
                    <button class="btn btn-default" data-dismiss="modal">Không</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        $("#luuOK").click(function () {
            var content = '&nbsp;';
            $.each($('.editable'), function (i, l) {
                content += $(this).html() + '||';
            });
            var fdata = { chitietnhap_ctdt: content, trangthaiht_ctdt: -1, don_id: 2 };
            $("#luuWin").css('z-index', 1030);
            $("#loader").fadeIn();
            $.ajax({
                url: '../nopdon', type: 'post', data: fdata,
                success: function (data, textStatus, jqXHR) {
                    window.location = window.location;
                }, error: function (jqXHR, textStatus, errorThrown) {
                    $("#log").html(jqXHR.responseText);
                }
            });
        });
    </script>
    <script>
        $('#btnPrint').click(function () {
            var win = window.open('', '_blank', 'width=794,height=1123,resizable=no,location=no');
            win.document.write("<style>body {font-family: Times New Roman;padding: 1cm 1.1cm; font-size: 16px;margin:0;line-height: 1.5em;}}</style>");
            win.document.write("<a class='hidden' style='position:fixed;top:15px;left:15px; width:24px; height:24px;background-image: url(../img/print.png) }})' href='javascript:window.print()'></a>");
            win.document.write($('.A4-paper').html());
            win.focus();
            win.document.close();
        });
        $('.editable').prop('contenteditable', true);
    </script>
    <div id="loader" class="panel panel-default">
        <h4>Đang thực thi...</h4>
        <div class="progress progress-striped active">
            <div class="progress-bar" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"
                style="width: 100%"></div>
        </div>
    </div>

    <div id="helper" class="alert alert-danger"></div>

    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
            $('#btnHuongdan').popover({ html: true, placement: 'top' });
            $('#btnPhanhoi').popover({ html: true, placement: 'top' });
        })
    </script>
</body>

</html>