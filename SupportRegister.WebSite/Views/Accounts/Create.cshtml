@model SupportRegister.ViewModels.Requests.System.Users.RegisterRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="card-title">Thêm người dùng mới</h3>
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">MSSV: </label>
                        <input asp-for="UserName" class="form-control" />
                        <span class="text-danger" asp-validation-for="@Model.UserName">@ViewBag.Error</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Mật khẩu</label>
                        <input asp-for="Password" class="form-control" />
                        <span class="text-danger" asp-validation-for="@Model.Password">@ViewBag.Error</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nhập lại mât khẩu</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span class="text-danger" asp-validation-for="@Model.ConfirmPassword">@ViewBag.Error</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Họ và tên:</label>
                        <input asp-for="FullName" class="form-control" />
                        <span class="text-danger" asp-validation-for="@Model.FullName">@ViewBag.Error</span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span class="text-danger" asp-validation-for="@Model.Email">@ViewBag.Error</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Địa chỉ</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Ngày sinh: </label>
                        <input type="date" asp-for="Birthday" class="form-control" />
                        <span asp-validation-for="Birthday" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Số điện thoại</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Role</label>
                        <select asp-for="RoleId" name="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Thêm người dùng" class="btn btn-primary mt-2" />
                        <a href="@Url.Action("GetAll", "Account")" class="btn btn-secondary mt-2 ">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

