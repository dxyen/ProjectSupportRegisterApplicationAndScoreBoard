@model SupportRegister.ViewModels.Requests.System.Users.AccountChangePassword

@{
    ViewData["Title"] = "Thay đổi mật khẩu";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Tài khoản</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>

<div class="row">
    <div class=" grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">@ViewData["Title"]</h6>
                <form asp-controller="Accounts" asp-action="ChangePassword" class="forms-sample" method="post">
                    <div class="mb-3">
                        <label asp-for="PasswordCurrent" class="form-label"></label>
                        <input asp-for="PasswordCurrent" class="form-control" autocomplete="off">
                    </div>
                    <div class="mb-3">
                        <label asp-for="PasswordNew" class="form-label"></label>
                        <input asp-for="PasswordNew" class="form-control" autocomplete="off">
                    </div>
                    <div class="mb-3">
                        <label asp-for="PasswordNewComfirm" class="form-label"></label>
                        <input asp-for="PasswordNewComfirm" class="form-control" autocomplete="off">
                    </div>
                    <div class="mb-3 text-danger" asp-validation-summary="All">
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Lưu lại</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

