@model SupportRegister.ViewModels.ViewModels.RoleViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="card-title">Edit Role</h2>
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Role Name</label>
                        <input asp-for="Name" type="text" class="form-control" id="exampleInputUsername1" autocomplete="off">
                        <span class="text-danger" asp-validation-for="@Model.Name">@ViewBag.Error</span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <input asp-for="Description" type="text" class="form-control" id="exampleInputEmail1">
                    </div>

                    <div class="form-group">

                        <a href="@Url.Action("Index", "Role")" class="btn btn-secondary">Cancel</a>
                        <input type="submit" value="Save" class="btn btn-primary  me-2" style="margin-left: 1em" />
                    </div>
                    <div>

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
