@model IEnumerable<SupportRegister.ViewModels.ViewModels.RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
<script>
    setTimeout(function () {
        $('#msgAlert').fadeOut('slow');
    }, 2000);
</script>
 }
@if (ViewBag.SuccessMsg != null)
{
    <div class="alert alert-fill-success position-fixed" id="msgAlert" role="alert" style="z-index: 9999; top: 80px; left: 800px">
        @ViewBag.SuccessMsg
    </div>
}
<div class="toast align-items-center text-white bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="d-flex">
    <div class="toast-body">
      Hello, world! This is a toast message.
    </div>
    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
</div>
<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Quản lý Quyền</a></li>
        <li class="breadcrumb-item active" aria-current="page">Thông tin các quyền</li>
    </ol>
</nav>
<div class="page-content" style="margin-top:0px">
    <div class="d-flex justify-content-between mb-1">
        <h3>Danh sách quyền</h3>
        <button type="button" class="btn btn-primary"><a class="text-white" asp-action="CreateRole" style="font-size: 1rem">Thêm quyền mới</a></button>
    </div>
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Thông tin quyền</h6>
                    <div class="table-responsive">
                        <table class="table" id="dataTableExample">
                            <thead>
                                <tr>
                                    <th>
                                        Số thứ tự
                                    </th>
                                    <th>
                                        Tên
                                    </th>
                                    <th>
                                        Chi tiết
                                    </th>
                                    <th>Tùy chọn</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i }))
                                {
                                    <tr>
                                        <td>
                                            @(item.Index +1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Data.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Data.Description)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Role", new { id =item.Data.Id })" style="color: #808080;">
                                                <i class="feather icon-edit" style="font-size: 2em"></i>
                                            </a>
                                            <a data-bs-toggle="modal" data-bs-target="#exampleModal@{@item.Index}" style="color: #808080">
                                                <i class="feather icon-delete" style="font-size: 2em"></i>
                                            </a>
                                            <!-- Modal -->
                                            <div class="modal fade" id="exampleModal@{@item.Index}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Xóa quyền</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="p-2">
                                                            Bạn có chắc muốn xóa quyền "@item.Data.Name"
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                            <a href="@Url.Action("Delete", "Role", new { id =item.Data.Id })" class="btn btn-danger">Xóa</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


