@model SupportRegister.WebSite.Models.MailViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="card-title">Cập nhật mail admin</h2>

<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">Cập nhật mail admin</h6>
                <form class="forms-sample" asp-action="Update">
                    <input value="@Model.mail.Id" name="id" type="hidden" autocomplete="off">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="mb-3">
                                <label class="form-label">Tên mail</label>
                                <input value="@Model.mail.Name" name="name" type="text" class="form-control" id="exampleInputUsername1" autocomplete="off">
                            </div>
                        </div><!-- Col -->
                        <div class="col-sm-4">
                            <div class="mb-3">
                                <label class="form-label">Địa chỉ mail</label>
                                <input value="@Model.mail.EmailAdmin1" name="email" type="text" class="form-control" id="exampleInputUsername1" autocomplete="off">
                            </div>
                        </div><!-- Col -->
                        <div class="col-sm-4">
                            <div class="mb-3">
                                <label class="form-label">Mật khẩu ứng dụng mail</label>
                                <input value="@Model.mail.Password" name="password" type="text" class="form-control" id="exampleInputUsername1" autocomplete="off">
                            </div>
                        </div><!-- Col -->
                    </div><!-- Row -->
                    <div class="form-group">
                            <input type="submit" value="Lưu" class="btn btn-primary  me-2" style="margin-left: 1em" />
                            <a href="@Url.Action("Index", "Emails")" class="btn btn-secondary">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
